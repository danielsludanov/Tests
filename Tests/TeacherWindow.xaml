<Window x:Class="Tests.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tests"
        mc:Ignorable="d"
        Title="TeacherWindow" Height="800" Width="1280">
    <Grid>
        <StackPanel Orientation="Vertical" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Панель управления учителя" Style="{StaticResource Headers}" FontSize="22" Margin="0 0 0 10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="BtnAddTest" Content="Создать тест" Style="{StaticResource AButton}" Margin="0 0 10 0" Click="BtnAddTest_Click"/>
                <Button x:Name="BtnStudents" Content="Студенты" Style="{StaticResource AButton}" Margin="0 0 10 0" Click="BtnStudents_Click"/>
                <Button x:Name="BtnReports" Content="Отчеты" Style="{StaticResource AButton}" Margin="0 0 10 0" Click="BtnReports_Click"/>
            </StackPanel>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>

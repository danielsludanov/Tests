<Page x:Class="Tests.Pages.AddTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tests.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="AddTestPage">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <Label Content="Создание теста" Style="{StaticResource Headers}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Label Content="Название теста" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="NameTest" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Label Content="Вопрос" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="NameQuestion" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Label Content="Ответ №1" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="Ans1" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Label Content="Ответ №2" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="Ans2" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Label Content="Ответ №3" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="Ans3" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Label Content="Ответ №4" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="Ans4" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Label Content="Правильный ответ" Style="{StaticResource Headers}" FontSize="14" Margin="0 0 0 5"/>
            <TextBox x:Name="CorrectAnswer" Style="{StaticResource ATextbox}" Margin="0 0 0 10"/>

            <Button x:Name="BtnAddQuestion" Content="Добавить еще" Style="{StaticResource AButton}" Margin="0 0 0 5" FontSize="12" Click="BtnAddQuestion_Click"/>
            <Button x:Name="BtnSave" Content="Сохранить" Style="{StaticResource AButton}" FontSize="12" Click="BtnSave_Click"/>

        </StackPanel>
    </Grid>
</Page>
